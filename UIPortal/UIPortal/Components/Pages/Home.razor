@page "/"

@using BusinessLogicLayer.Dto

@using System.Net.Http.Json;

@inject NavigationManager Navigation
@inject HttpClient _httpClient

@rendermode InteractiveServer

@inject IJSRuntime JS

<PageTitle>Home</PageTitle>

<div class="row">
    <div class="col-12">
        <h2 class="fw-bolder"> <span class="text-success">Welcome</span></h2>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <AuthorizeView>
                    <NotAuthorized>
                        <span>You are not logged in. Please <a class="fw-bolder" href="/login">click here</a> to log in.</span>
                    </NotAuthorized>
                    <Authorized>
                        <span>Logged in as <b class="fw-bolder">@context.User.Identity.Name</b>. <a class="fw-bolder" href="/logout">Click here</a>To Logout</span>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</div>

